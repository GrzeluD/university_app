<div class="row">
  <div class="col s12">
    <h2 class="center-align">Course Listing</h2>
  </div>
</div>

<div class="row">
  <% @courses.each do |course| %>
    <div class="col s6 m6">
      <div class="card indigo lighten-5">
        <div class="card-content black-text">
          <span class="card-title"><%= course.short_name %>: <%= course.name %></span>
          <p> <%= course.description %> </p>
        </div>
        <div class="card-action">
          <% if logged_in? && !(current_user.courses.include?(course)) %>
            <%= link_to 'Enroll', course_enroll_path(course_id: course.id), method: :post, class: "indigo btn-small" %>
          <% end %>
          <a class="indigo btn-small" href="#">Info</a>
        </div>
      </div>
    </div>
  <% end %>
</div>