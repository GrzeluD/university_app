<div class="row">
  <div class="col s12">
    <h2 class="center-align">Student Listing</h2>
  </div>
</div>

<div class="row">
  <% @students.each do |student| %>
    <div class="col s6 m6">
      <div class="card indigo lighten-5">
        <div class="card-content black-text">
          <span class="card-title">Name: <%= student.name %></span>
          <p>Email: <%= student.email %></p>
          <p> Enrolled courses: None</p>
        </div>
        <div class="card-action">
          <%= link_to 'View profile', student_path(student), class: "indigo btn-small" %>
        </div>
      </div>
    </div>
  <% end %>
</div>